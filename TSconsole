echo -e "
+----------------------------------+
|          ${B0}${S5}<<<PROGRAMS>>>${R0}${R1}          |
+----------------------------------+

${S2}â”Œâ”€(${S3} use phish/webpage/handler/reverse_http ${S2})${R0}
${S2}â””[ !${S4}webpage phishing program${S2}! ]${R0}

${S2}â”Œâ”€(${S3} use phish/camera/handler/reverse_http ${S2})${R0}
${S2}â””[ !${S4}camera phishing program${S2}! ]${R0}

${S2}â”Œâ”€(${S3} use brute/social-media/handler ${S2})${R0}
${S2}â””[ !${S4}social-media bruteforce program${S2}! ]${R0}

${S2}â”Œâ”€(${S3} use brute/zip-file/handler ${S2})${R0}
${S2}â””[ !${S4}zip-file bruteforce program${S2}! ]${R0}

${S2}â”Œâ”€(${S3} use brute/hashes/handler ${S2})${R0}
${S2}â””[ !${S4}hashes' bruteforce program${S2}! ]${R0}

${S2}â”Œâ”€(${S3} use encode/hashes/handler ${S2})${R0}
