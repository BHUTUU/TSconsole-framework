#<<<----------Processbar---------->>>
processbar()
{
   bar=" #######################################################"
   barlenght=${#bar}
   i=o
   while ((i < 100 )); do
           n=$((i*barlenght / 100 ))
           printf "\e[00;35m\r[%-${barlenght}s]\e[00m" "${bar:0:n}"
           ((i += RANDOM%5+2))
           sleep 0.01
   done
}

